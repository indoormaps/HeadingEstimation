<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:id="@+id/acc_txt"
        android:text="Acc      x:        y:        z:        "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <SurfaceView
        android:id="@+id/acc_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />

    <TextView
        android:id="@+id/gyr_txt"
        android:text="Gyr      x:        y:        z:        "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/acc_txt"
        android:layout_alignParentStart="true" />

    <SurfaceView
        android:id="@+id/gyr_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />

    <TextView
        android:id="@+id/mag_txt"
        android:text="Mag      x:        y:        z:        "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gyr_txt"
        android:layout_alignParentStart="true" />

    <SurfaceView
        android:id="@+id/mag_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/start_btn"
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/stop_btn"
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/clear_btn"
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>


    <TextView
        android:id="@+id/info"
        android:text="Info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stop_btn"
        android:layout_alignParentStart="true" />

    <SurfaceView
        android:id="@+id/euler_view1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        />

    <SurfaceView
        android:id="@+id/euler_view2"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="80dp"
        />
</LinearLayout>
